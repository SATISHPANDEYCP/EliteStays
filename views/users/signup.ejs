<% layout('layouts/boilerplate') -%>

    <div class="row mt-3">
        <div class="col-6 offset-3">
            <h1>SignUp On EliteStay</h1>
            <br>
            <form method="POST" action="/signup" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username">Username</label>
                    <input name="username" type="text" class="form-control" required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Username required!</div>
                </div>

                <div class="mb-3">
                    <label for="email">Email</label>
                    <input name="email" type="email" class="form-control" required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Email required!</div>
                </div>

                <div class="mb-3">
                    <label for="password">Password</label>
                    <input name="password" type="password" class="form-control" required />
                    <div class="valid-feedback">Looks Good!</div>
                    <div class="invalid-feedback">Password required!</div>
                </div>

                <button class="btn btn-dark mt-3 edit-btn btn-success">Sign Up</button>
            </form>
            <br><br>
        </div>
    </div>